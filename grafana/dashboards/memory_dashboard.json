{
  "annotations": {"list": [{"builtIn": 1, "datasource": {"type": "grafana", "uid": "-- Grafana --"}, "enable": true, "hide": true, "name": "Annotations", "type": "dashboard"}]},
  "editable": true,
  "graphTooltip": 1,
  "panels": [
    {
      "type": "stat",
      "title": "Linux Memory Used %",
      "gridPos": {"h": 4, "w": 8, "x": 0, "y": 0},
      "datasource": {"type": "prometheus", "uid": "PROMDS"},
      "options": {"reduceOptions": {"calcs": ["mean"], "fields": "", "values": false}},
      "targets": [
        {
          "expr": "(1 - (avg(node_memory_MemAvailable_bytes) / avg(node_memory_MemTotal_bytes))) * 100",
          "legendFormat": "Linux",
          "refId": "A"
        }
      ],
      "fieldConfig": {"defaults": {"unit": "percent"}}
    },
    {
      "type": "stat",
      "title": "Windows Memory Used %",
      "gridPos": {"h": 4, "w": 8, "x": 8, "y": 0},
      "datasource": {"type": "prometheus", "uid": "PROMDS"},
      "options": {"reduceOptions": {"calcs": ["mean"], "fields": "", "values": false}},
      "targets": [
        {
          "expr": "(1 - (avg(windows_memory_available_bytes) / avg(windows_cs_physical_memory_bytes))) * 100",
          "legendFormat": "Windows",
          "refId": "A"
        }
      ],
      "fieldConfig": {"defaults": {"unit": "percent"}}
    },
    {
      "type": "timeseries",
      "title": "Linux Memory Used % by Instance",
      "gridPos": {"h": 10, "w": 12, "x": 0, "y": 4},
      "datasource": {"type": "prometheus", "uid": "PROMDS"},
      "fieldConfig": {"defaults": {"unit": "percent"}},
      "targets": [
        {
          "expr": "(1 - (avg by (instance) (node_memory_MemAvailable_bytes) / avg by (instance) (node_memory_MemTotal_bytes))) * 100",
          "legendFormat": "{{instance}}",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Windows Memory Used % by Instance",
      "gridPos": {"h": 10, "w": 12, "x": 12, "y": 4},
      "datasource": {"type": "prometheus", "uid": "PROMDS"},
      "fieldConfig": {"defaults": {"unit": "percent"}},
      "targets": [
        {
          "expr": "(1 - (avg by (instance) (windows_memory_available_bytes) / avg by (instance) (windows_cs_physical_memory_bytes))) * 100",
          "legendFormat": "{{instance}}",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Swap Usage % (Linux)",
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 14},
      "datasource": {"type": "prometheus", "uid": "PROMDS"},
      "fieldConfig": {"defaults": {"unit": "percent"}},
      "targets": [
        {
          "expr": "((node_memory_SwapTotal_bytes - node_memory_SwapFree_bytes) / node_memory_SwapTotal_bytes) * 100",
          "legendFormat": "{{instance}}",
          "refId": "A"
        }
      ]
    }
  ],
  "schemaVersion": 39,
  "tags": ["devops", "memory"],
  "templating": {
    "list": [
      {
        "name": "instance",
        "type": "query",
        "datasource": {"type": "prometheus", "uid": "PROMDS"},
        "query": "label_values(up, instance)",
        "includeAll": true,
        "multi": true,
        "refresh": 2
      }
    ]
  },
  "time": {"from": "now-6h", "to": "now"},
  "title": "Memory Overview",
  "uid": "memory-overview",
  "version": 1
}
